<div class="form-wrapper">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= image_tag "icon/e.png", class: "mb-4", width: "72", height: "72" %>
    <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email", class:'form-control' %>
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    <p class="mt-5 mb-3 text-muted">EventBright Â© 2021</p>
    <%= render "devise/shared/links" %>
  <% end %>
</div>