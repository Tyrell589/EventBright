<%= render partial: "shared/banner", locals: { title: "Edit Profile" } %>

<div class="container">
  <div class="form-group">

    <%= render partial: "users/user_avatar", locals: { user: current_user, size: "200" } %>

    <%= form_tag user_avatar_path(current_user.id), multipart: true do %>
      <%= file_field_tag :avatar %><br>
      <%= submit_tag "Upload", class:"btn btn-primary" %>
    <% end %>
    
    <%= link_to 'Delete avatar', user_avatar_path(current_user.id), method: :delete, class: "btn btn-danger" %>
  </div>

  <h2>Edit your personnal infos:</h2>

  <%= form_for @user, :html => { novalidate: true, class: "needs-validation" } do |f| %>

    <div class="form-group">
      <%= f.label 'first_name' %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label 'last_name' %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label 'description' %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    
    <%= submit_tag "Edit infos", class:"btn btn-primary" %>

  <% end %>
</div>