<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    Show Event #<%= @event.id %>
  </h1>

  <div>
    <%= link_to "Edit Event ##{@event.id}", edit_admin_event_submission_path(@event.id),  class: "button" %>
  </div>
</header>

<section class="main-content__body">
  <dl>
    <dt class="attribute-label" id="administrator">
      Administrator
    </dt>
    <dd class="attribute-data attribute-data--belongs-to">
      <%= link_to "User ##{@event.administrator.id}", admin_user_path(@event.administrator.id) %>
    </dd>
    <dt class="attribute-label" id="id">
      ID
    </dt>
    <dd class="attribute-data attribute-data">
      <%= @event.id %>
    </dd>
    <dt class="attribute-label" id="start-date">
      Start Date
    </dt>
    <dd class="attribute-data attribute-data">
      <%= @event.starting_date_time %>
    </dd>
    <dt class="attribute-label" id="duration">
      Duration
    </dt>
    <dd class="attribute-data attribute-data">
      <%= @event.duration %>
    </dd>
    <dt class="attribute-label" id="title">
      Title
    </dt>
    <dd class="attribute-data attribute-data">
      <%= @event.title %>
    </dd>
    <dt class="attribute-label" id="price">
      Price
    </dt>
    <dd class="attribute-data attribute-data">
      <%= @event.price %>
    </dd>
    <dt class="attribute-label" id="location">
      Location
    </dt>
    <dd class="attribute-data attribute-data">
      <%= @event.location %>
    </dd>
    <dt class="attribute-label" id="created_at">
      Created At
    </dt>
    <dd class="attribute-data attribute-data">
      <%= @event.created_at %>
    </dd>
    <dt class="attribute-label" id="updated_at">
      Updated At
    </dt>
    <dd class="attribute-data attribute-data">
      <%= @event.updated_at %>
    </dd>
  </dl>
    <%= form_for @event, url: validate_admin_event_submission_path(@event.id), method: :put, html: { class: "form" } do |f| %>
    <%= f.hidden_field :validated, value: true %>
      <div class="center">
        <%= submit_tag "Validate Event", data: { confirm: 'Validate Event?' }, class:'btn-validate-action '%>
      </div>
    <% end %>
</section>