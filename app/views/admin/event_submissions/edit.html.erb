<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    Edit Event #<%= @event.id %>
  </h1>

  <div>
    <%= link_to "Show Event ##{@event.id}", admin_event_submission_path(@event.id),  class: "button" %>
  </div>
</header>

<section class="main-content__body">
  <%= render partial: 'admin/event_submissions/form', locals: { resource: @event, url: admin_event_submission_path(@event.id)  } %>
</section>