<%= form_for resource, url: url, html: { class: "form" } do |f| %>
  <%= render partial: 'components/error_messages', locals: {resource: resource} %>

  <div class="field-unit field-unit--required">
    <div class="field-unit__label">
      <%= f.label 'title' %>
    </div>
    <div class="field-unit__field">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="field-unit field-unit--optional">
    <div class="field-unit__label">
      <%= f.label 'start date' %>
    </div>
    <div class="field-unit__field">
      <%= f.text_field :start_date, :data => {:type => 'datetime' } %>
    </div>
  </div>

  <div class="field-unit field-unit--optional">
    <div class="field-unit__label">
      <%= f.label 'duration' %>
    </div>
    <div class="field-unit__field">
      <%= f.text_field :duration %>
    </div>
  </div>

  <div class="field-unit field-unit--optional">
    <div class="field-unit__label">
      <%= f.label 'description' %>
    </div>
    <div class="field-unit__field">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="field-unit field-unit--optional">
    <div class="field-unit__label">
      <%= f.label 'location' %>
    </div>
    <div class="field-unit__field">
      <%= f.text_field :location %>
    </div>
  </div>

  <div class="field-unit field-unit--optional">
    <div class="field-unit__label">
      <%= f.label 'price' %>
    </div>
    <div class="field-unit__field">
      <%= f.text_field :price %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>