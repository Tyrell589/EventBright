<%= render partial: "shared/banner", locals: { title: "Dashboard" } %>

<div class="container">
  <div class="text-center">
    <h2>Participants registered for this event</h2>
  </div>

  <div class="list-group">
      <% @participations.each do |participation| %>
         <%= render partial: "users/user_card_list", locals: { user: participation.user, participation: participation } %>
      <% end %>
  </div>
  <div class="text-center">
    <%= link_to 'Edit this event', edit_event_path(@event), class:'btn btn-primary' %>
    <%= link_to 'Delete this event', event_path(@event), method: :delete, class: 'btn btn-danger' %>
  </div>
</div>